<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="#FFF">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_comment_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/default_head"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_comment_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_comment_head"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/img_comment_head"
        android:text="未知"
        android:textColor="#333333"
        android:textSize="14sp" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_below="@id/img_comment_head"
        android:layout_alignLeft="@id/img_comment_head"
        android:layout_marginRight="35dp"
        android:layout_marginTop="6dp"
        />-->


    <TextView
        android:id="@+id/tv_comment_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_comment_name"
        android:layout_below="@id/tv_comment_name"
        android:layout_marginTop="20dp"
        android:text="未作出评价！"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_comment_speech"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:text="2018-08-08"
        android:textColor="#333333"
        android:textSize="12sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#F6F7FF"
        android:layout_below="@id/tv_comment_time"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FFF">

    <TextView
        android:id="@+id/tv_stack_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="一年级"
        android:textColor="#111111"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_stack_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_stack_class"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="@string/more"
        android:textColor="#87dcad" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_stack_class"
        android:layout_margin="10dp">

        <!--<ImageView
            android:id="@+id/img_book_stack_one"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:background="#3FEBBB"
            android:src="@mipmap/ic_launcher" />-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_book_stack_one"
            android:layout_width="70dp"
            android:layout_height="98dp"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/nothing"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="3dp" />

        <TextView
            android:id="@+id/tv_book_stack_one_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_book_stack_one"
            android:layout_below="@id/img_book_stack_one"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/nothing"
            android:visibility="gone" />

        <!--<ImageView
            android:id="@+id/img_book_stack_two"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="#3FEBBB"
            android:src="@mipmap/ic_launcher" />-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_book_stack_two"
            android:layout_width="70dp"
            android:layout_height="98dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/nothing"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="3dp" />

        <TextView
            android:id="@+id/tv_book_stack_two_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_book_stack_two"
            android:layout_below="@id/img_book_stack_two"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/nothing"
            android:visibility="gone" />

        <!--<ImageView
            android:id="@+id/img_book_stack_three"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:background="#3FEBBB"
            android:src="@mipmap/ic_launcher" />-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_book_stack_three"
            android:layout_width="70dp"
            android:layout_height="98dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:visibility="gone"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/nothing"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="3dp" />

        <TextView
            android:id="@+id/tv_book_stack_three_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_book_stack_three"
            android:layout_below="@id/img_book_stack_three"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/nothing"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_class_search"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/class_bg"
        android:gravity="center"
        android:padding="25dp">

        <SearchView
            android:id="@+id/sv_class_serch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/search_view_line"
            android:gravity="center"
            android:iconifiedByDefault="false"
            android:inputType="number"
            android:queryHint="@string/search_class"></SearchView>

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_class"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_class_search"
        android:scrollbars="vertical"></ListView>

    <TextView
        android:id="@+id/tv_none_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="没有班级"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_below="@id/rl_class_search"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_item_book"
        android:layout_width="70dp"
        android:layout_height="95dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/nothing"
        app:placeholderImageScaleType="centerCrop"
        app:roundedCornerRadius="5dp" />

    <LinearLayout
        android:id="@+id/ll_book_msg"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/img_item_book"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/nothing"
            android:textColor="#333333"
            android:textSize="18sp"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/nothing"
            android:textColor="#4d79ff" />

        <TextView
            android:id="@+id/tv_book_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/nothing"
            android:textColor="#c9c9c9" />

        <TextView
            android:id="@+id/tv_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/nothing"
            android:textColor="#ffa855" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_book"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_bg3"
        android:text="+加入书架"
        android:textColor="@color/white" />
</RelativeLayout>